{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@mini-vue3/*": ["packages/*/src"]
    },
    "types": [
      "vitest/globals"
    ],
    "strict": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ]
}
